{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="jumbotron text-center">
            <h1>My Admin page </h1>
            <p>Resize this responsive page to see the effect!</p>
        </div>
        <div >
            Users:
            <ul class="list-group">
                {% for user in users %}
                    {% if 'ROLE_ADMIN' in user.roles %}
                        <li class="list-group-item list-group-item-success">{{ user.username|e }}</li>
                    {% else %}
                        <li class="list-group-item">{{ user.username|upper }}</li>
                    {% endif %}
                {% endfor %}

            </ul>
        </div>
    </div>
{% endblock %}